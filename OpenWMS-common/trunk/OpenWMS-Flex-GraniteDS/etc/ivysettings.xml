<ivysettings>
	<settings defaultResolver="openwms-repo-chain" />

	<resolvers>
		<chain name="openwms-repo-chain">
			<filesystem name="project-lib">
				<ivy
					pattern="${basedir}/deps/[organisation]/[module]/ivys/ivy-[revision].xml" />
				<artifact
					pattern="${basedir}/deps/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]" />
			</filesystem>
			<url name="com.springsource.repository.bundles.release">
				<ivy
					pattern="http://repository.springsource.com/ivy/bundles/release/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
				<artifact
					pattern="http://repository.springsource.com/ivy/bundles/release/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
			<url name="com.springsource.repository.bundles.external">
				<ivy
					pattern="http://repository.springsource.com/ivy/bundles/external/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
				<artifact
					pattern="http://repository.springsource.com/ivy/bundles/external/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
			<url name="JBoss-repo" m2compatible="true">
				<ivy
					pattern="http://repository.jboss.org/maven2/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
				<artifact
					pattern="http://repository.jboss.org/maven2/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
			<url name="Ibiblio-repo" m2compatible="true">
				<artifact
					pattern="http://www.ibiblio.org/maven2/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
			<url name="default-repo" m2compatible="true">
				<artifact
					pattern="http://repo1.maven.org/maven2/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
			</url>
		</chain>
	</resolvers>
</ivysettings>