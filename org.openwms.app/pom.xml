<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openwms</groupId>
        <artifactId>org.openwms</artifactId>
        <version>0.2</version>
    </parent>
    <artifactId>org.openwms.app</artifactId>
    <version>0.2</version>
    <packaging>pom</packaging>
    <name>OpenWMS.org Application</name>
    <properties>
        <moduleDir>../..</moduleDir>
        <core.version>0.2</core.version>
        <common.version>0.2</common.version>
        <tms.version>0.2</tms.version>
        <wms.version>0.0.1-SNAPSHOT</wms.version>
    </properties>

    <distributionManagement>
        <site>
            <id>${distribution.serverId}</id>
            <name>OpenWMS.org WebSite</name>
            <url>${distribution.serverProtocol}://${distribution.serverUrl.sourcePath}/org.openwms.app</url>
        </site>
    </distributionManagement>

    <scm>
        <url>https://github.com/openwms/org.openwms</url>
        <connection>scm:git:git://github.com/openwms/org.openwms.git</connection>
        <developerConnection>scm:git:git@github.com:openwms/org.openwms.git</developerConnection>
    </scm>

    <profiles>
        <profile>
            <id>all</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>org.openwms.client.rest.provider</module>
            </modules>
        </profile>
        <profile>
            <id>flex</id>
            <activation>
                <property>
                    <name>flex</name>
                </property>
            </activation>
            <modules>
                <module>org.openwms.client.flex.app</module>
                <module>org.openwms.client.flex.wrapper</module>
                <module>org.openwms.client.rest.provider</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>org.openwms.client.flex.app</artifactId>
                        <version>${flex.client.version}</version>
                        <type>swf</type>
                    </dependency>
                    <dependency>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>org.openwms.client.flex.wrapper</artifactId>
                        <version>${flex.client.version}</version>
                        <type>war</type>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
        <profile>
            <id>angularjs</id>
            <activation>
                <property>
                    <name>angularjs</name>
                </property>
            </activation>
            <modules>
                <module>org.openwms.client.angularjs.app</module>
                <module>org.openwms.client.angularjs.wrapper</module>
            </modules>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>org.openwms.client.angularjs.app</artifactId>
                        <version>${angularjs.client.version}</version>
                        <type>war</type>
                    </dependency>
                    <dependency>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>org.openwms.client.angularjs.wrapper</artifactId>
                        <version>${angularjs.client.version}</version>
                        <type>war</type>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>
    </profiles>

    <dependencyManagement>
        <dependencies>
	        <!-- Project dependencies -->
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.client.rest.provider</artifactId>
                <version>${rest.version}</version>
                <type>war</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>