<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="OpenWMS-test-durable" transaction-type="RESOURCE_LOCAL">
        <class>org.openwms.wms.domain.LoadUnit</class>
        <class>org.openwms.wms.domain.PackagingUnit</class>

        <class>org.openwms.wms.domain.inventory.Product</class>

        <class>org.openwms.wms.domain.order.OrderPosition</class>
        <class>org.openwms.wms.domain.order.OrderPositionSplit</class>

        <class>org.openwms.wms.domain.shipping.ShippingOrder</class>
        <class>org.openwms.wms.domain.shipping.ShippingOrderPositionSplit</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
