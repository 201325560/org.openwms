<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openwms</groupId>
        <artifactId>org.openwms</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <groupId>org.openwms</groupId>
    <artifactId>org.openwms.common</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>OpenWMS.org COMMON Project</name>
    <properties>
        <moduleDir>.</moduleDir>
        <core.version>0.0.1-SNAPSHOT</core.version>
    </properties>

    <distributionManagement>
        <repository>
            <id>${distribution.repo.serverId}</id>
            <name>OpenWMS.org Release Repository</name>
            <url>${distribution.repo.serverProtocol}//${distribution.repo.serverUrl.rootPath}</url>
        </repository>
        <snapshotRepository>
            <id>${distribution.repo.serverId}</id>
            <name>OpenWMS.org Snapshot Repository</name>
            <url>${distribution.repo.serverProtocol}//${distribution.repo.snapshot.serverUrl.rootPath}</url>
        </snapshotRepository>
        <site>
            <id>${distribution.serverId}</id>
            <name>OpenWMS.org WebSite</name>
            <url>${distribution.serverProtocol}://${distribution.serverUrl.sourcePath}/common</url>
        </site>
    </distributionManagement>

    <scm>
        <connection>scm:svn:http://openwms2005.svn.sourceforge.net/svnroot/openwms2005/org.openwms/trunk/common</connection>
        <developerConnection>scm:svn:https://openwms2005.svn.sourceforge.net/svnroot/openwms2005/org.openwms/trunk/common</developerConnection>
        <url>http://openwms2005.svn.sourceforge.net/viewvc/openwms2005/org.openwms/trunk/common</url>
    </scm>

    <profiles>
        <profile>
            <id>all</id>
            <modules>
                <module>org.openwms.common.domain</module>
                <module>org.openwms.common.domain.as</module>
                <module>org.openwms.common.flex.lib</module>
                <module>org.openwms.common.flex.module</module>
                <module>org.openwms.common.integration</module>
                <module>org.openwms.common.integration.jpa</module>
                <module>org.openwms.common.service.api</module>
                <module>org.openwms.common.service.spring</module>
                <module>org.openwms.common.util</module>
            </modules>
        </profile>
    </profiles>

    <dependencyManagement>
    	<dependencies>
            <!-- Project dependencies -->
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.domain</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.domain.as</artifactId>
                <version>${project.version}</version>
                <type>swc</type>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.flex.lib</artifactId>
                <version>${project.version}</version>
                <type>swc</type>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.flex.module</artifactId>
                <version>${project.version}</version>
                <type>swf</type>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.integration</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.integration.jpa</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.service.api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.service.spring</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>org.openwms.common.util</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>