<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" width="484" height="466" title="Create Transport Order" fontSize="12" creationComplete="init();" xmlns:comp="org.openwms.web.flex.client.component.*">

    <mx:Script>
    	<![CDATA[
    		import org.openwms.common.domain.LocationGroup;
    		import mx.collections.ArrayCollection;
            import org.openwms.web.flex.client.model.ModelLocator;
    	
            import mx.containers.HBox;
            import mx.controls.Image;
            import mx.managers.PopUpManager;
            import flash.events.KeyboardEvent;
            import mx.controls.CheckBox;
            
            [Bindable]
            private var modelLocator:ModelLocator = ModelLocator.getInstance();
            
            [Embed ("closeButton.png")]
            private var closeImg:Class;
    	
            private function init():void
            {
            	barcodeTxt.setFocus();
                var image:Image = new Image();
                image.source = closeImg;
                image.width=16;
                image.height=16;
                image.addEventListener(MouseEvent.CLICK, closeDialog);
                var titleHbox:HBox = new HBox();
                titleHbox.width=this.titleBar.width;
                titleHbox.height=this.titleBar.height;
                titleHbox.addChild(image);
                this.titleBar.addChild(titleHbox);
                this.addEventListener(KeyboardEvent.KEY_DOWN, keyEventHandler);
                PopUpManager.centerPopUp(this);
            }
            
            private function closeDialog(event:Event=null):void
            {
            	this.removeEventListener(KeyboardEvent.KEY_DOWN, keyEventHandler);
                PopUpManager.removePopUp(this);
            }
            
            private function createTransportOrder():void
            {
            	// First do some checks...
            	if (!targetLocationGroupChk.selected && !targetLocationChk.selected)
            	{
            		// Please provide at least one target
            		// Change state of component to show a div
            	}
            	closeDialog();
            }

	        private function keyEventHandler(event:KeyboardEvent):void
	        {
	        	// ESC
	            if(event.keyCode == 27)
	            {
	               closeDialog(event);
	               return;
	            }
	        }
	        
	        // TODO: Merhe with LocationGroupView and move to lib project
            private function getListAsComboBoxList(list:ArrayCollection):ArrayCollection {
            	var result:ArrayCollection = new ArrayCollection();
                for (var i:uint = 0; i < list.length; i++) {
                    result.addItem((list[i] as LocationGroup).name);
                }
                return result;
            }
    	]]>
    </mx:Script>

	<mx:Canvas width="100%" height="100%">
		<mx:Label id="barcodeTxt" x="10" y="10" text="Transport Unit" fontSize="24"/>
		<mx:Label x="9" y="80" text="Priority" fontSize="24"/>
		<mx:Canvas x="9" y="151" width="445" height="229" backgroundColor="#F1F07C">
			<mx:CheckBox id="targetLocationGroupChk" x="10" y="10" label="Target Location Group" selected="true" fontSize="24" />
            <mx:ComboBox id="targetLocationGroupCmb" x="53" y="57" fontSize="24" width="382" dataProvider="{getListAsComboBoxList(modelLocator.allLocationGroups)}" enabled="{targetLocationGroupChk.selected}" />
			<mx:CheckBox id="targetLocationChk" x="10" y="104" label="Target Location" selected="false" fontSize="24" />
            <comp:LocationSelector id="targetLocationCmb" x="53" y="151" enabled="{targetLocationChk.selected}"/>
		</mx:Canvas>
		<mx:Button id="createBtn" x="10" y="388" label="Create" fontSize="12" click="createTransportOrder()"/>
		<mx:Button id="cancelBtn" x="384" y="388" label="Cancel" fontSize="12" click="closeDialog(event)"/>
        <mx:ComboBox id="barcodeCmb" x="195" y="10" fontSize="24" width="259" />
		<mx:ComboBox id="priorityCmb" x="195" y="77" fontSize="24" width="259" />
	</mx:Canvas>
</mx:Panel>
