<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="66" backgroundImage="@Embed(source='assets/images/openwms_banner.jpg')" backgroundSize="100%">

    <mx:Script>
    	<![CDATA[
    		import org.openwms.web.flex.client.event.EventBroker;
    		import org.openwms.web.flex.client.event.ApplicationEvent;
    		[Bindable]
    		private var currentUser:String = "Anonymous";
    		private var broker:EventBroker = EventBroker.getInstance();
    		
    		private function logout(event:MouseEvent = null):void {
    			var e:ApplicationEvent = new ApplicationEvent(ApplicationEvent.LOGOUT);
    			//broker.dispatchEvt(e);
    			e.dispatch();
    		}
    	]]>
    </mx:Script>
    <mx:HBox width="100%" height="66" horizontalAlign="left">
        <mx:Image height="100%" source="@Embed('assets/images/openwms_header.png')" />
        <mx:VBox height="100%" width="100%" horizontalAlign="right" verticalAlign="bottom">
            <mx:HBox width="100%" horizontalAlign="right">
                <mx:LinkButton label="{currentUser}" color="#E9EBEB" cornerRadius="4"/>
                <mx:Image width="16" source="@Embed('assets/images/icons/user--anonymous.png')"/>
            </mx:HBox>
            <mx:HBox width="100%" horizontalAlign="right">
                <mx:LinkButton label="logout" color="#E9EBEB" click="logout()"/>
                <mx:Image width="16" source="@Embed('assets/images/icons/logout.png')"/>
            </mx:HBox>
        </mx:VBox>
    </mx:HBox>
</mx:Canvas>
