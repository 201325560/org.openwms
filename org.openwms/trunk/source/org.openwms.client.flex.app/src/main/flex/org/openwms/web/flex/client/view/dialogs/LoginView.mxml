<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="300" height="220" backgroundColor="#FFFFFF"
	backgroundAlpha="0.5" borderStyle="solid" alpha="1" borderThickness="3" title="Application Login" creationComplete="onShow();">

    <mx:Metadata>
        [Name]
    </mx:Metadata>

	<mx:Script>
        <![CDATA[
            
            import mx.managers.PopUpManager;
            import org.granite.tide.events.TideResultEvent;
            import org.granite.tide.events.TideFaultEvent;
            import org.granite.tide.spring.Identity;

            [In]
            [Bindable]
            public var identity:Identity;
            [Bindable]
            public var loginMessageText:String = "";
            
            private function onShow():void {
            	myUser.setFocus();
            }
            
            private function onLogin(username:String, password:String):void {
                identity.login(username, password, loginOk, loginError);        
            }

            private function loginOk(event:TideResultEvent):void {
                loginMessageText = null;
                PopUpManager.removePopUp(this);
            }
        
            private function loginError(event:TideFaultEvent):void {
                loginMessageText = event.fault.faultString;
            }

        ]]>
	</mx:Script>

	<mx:Form width="100%" height="100%">
		<mx:FormHeading label="LOGIN" />
		<mx:FormItem label="User">
			<mx:TextInput id="myUser" />
		</mx:FormItem>
		<mx:FormItem label="Password">
			<mx:TextInput id="myPass" displayAsPassword="true" enter="onLogin(myUser.text, myPass.text)"/>
		</mx:FormItem>
		<mx:Text text="{loginMessageText}"/>
		<mx:FormItem>
			<mx:Button label="Login" click="onLogin(myUser.text, myPass.text)" />
		</mx:FormItem>
	</mx:Form>

</mx:TitleWindow>     
