<services-config>

    <services>
        <service
            id="granite-service" 
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">
            <destination id="spring">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>tideSpringFactory</factory>
                    <entityManagerFactoryBeanName>
                        entityManagerFactory
                    </entityManagerFactoryBeanName>
                </properties>
            </destination>
            <destination id="locationService">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>locationService</source>
                </properties>
            </destination>
            <destination id="locationGroupService">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>locationGroupService</source>
                </properties>
            </destination>
            <destination id="userService">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>userService</source>
                </properties>
            </destination>
            <destination id="transportUnitService">
                <channels>
                    <channel ref="my-graniteamf"/>
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>transportUnitService</source>
                </properties>
            </destination>
            <destination id="moduleManagementService2">
                <channels>
                    <channel ref="my-graniteamf" />
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>moduleManagementService</source>
                </properties>
            </destination>
            <destination id="transportService">
                <channels>
                    <channel ref="my-graniteamf" />
                </channels>
                <properties>
                    <factory>springFactory</factory>
                    <source>transportService</source>
                </properties>
                <security>
                    <security-constraint>
                        <auth-method>Custom</auth-method>
                        <roles>
                            <role>ROLE_ADMIN</role>
                            <role>ROLE_USER</role>
                        </roles>
                    </security-constraint>
                </security>            
            </destination>
        </service>
        
        <service id="gravity-service"
          class="flex.messaging.services.MessagingService"
          messageTypes="flex.messaging.messages.AsyncMessage">
          <adapters>
            <adapter-definition id="simple" class="org.granite.gravity.adapters.SimpleServiceAdapter"/>
          </adapters>
        
          <destination id="clientTopic">
            <properties>
              <no-local>false</no-local> 
              <session-selector>true</session-selector>
            </properties>
            <channels>
              <channel ref="gravityamf"/>
            </channels>
            <adapter ref="simple"/>
          </destination>
        </service>        
        
    </services>

    <factories>
        <factory id="tideSpringFactory"
            class="org.granite.tide.spring.SpringServiceFactory" />
        <factory id="springFactory"
            class="org.granite.spring.SpringServiceFactory" />
    </factories>

    <channels>
        <channel-definition id="my-graniteamf" class="mx.messaging.channels.AMFChannel">
            <endpoint
                uri="http://{server.name}:{server.port}/{context.root}/graniteamf/amf"
                class="flex.messaging.endpoints.AMFEndpoint"/>
        </channel-definition>
        <channel-definition id="gravityamf" class="org.granite.gravity.channels.GravityChannel">
            <endpoint
                uri="http://{server.name}:{server.port}/{context.root}/gravityamf/amf"
                class="flex.messaging.endpoints.AMFEndpoint"/>
        </channel-definition>
    </channels>

</services-config>

