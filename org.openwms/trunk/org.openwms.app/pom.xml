<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openwms</groupId>
        <artifactId>org.openwms</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <groupId>org.openwms</groupId>
    <artifactId>org.openwms.app</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>OpenWMS.org Application</name>
    <properties>
        <moduleDir>../..</moduleDir>
        <bundle.version>0.0.1.SNAPSHOT</bundle.version>
        <core.version>0.0.1-SNAPSHOT</core.version>
        <common.version>0.0.1-SNAPSHOT</common.version>
        <tms.version>0.0.1-SNAPSHOT</tms.version>
    </properties>

    <distributionManagement>
        <site>
            <id>${distribution.serverId}</id>
            <name>OpenWMS.org WebSite</name>
            <url>${distribution.serverProtocol}://${distribution.serverUrl.sourcePath}/org.openwms.app</url>
        </site>
    </distributionManagement>

    <scm>
        <connection>scm:svn:http://openwms2005.svn.sourceforge.net/svnroot/openwms2005/org.openwms/trunk/org.openwms.app</connection>
        <developerConnection>scm:svn:https://openwms2005.svn.sourceforge.net/svnroot/openwms2005/org.openwms/trunk/org.openwms.app</developerConnection>
        <url>http://openwms2005.svn.sourceforge.net/viewvc/openwms2005/org.openwms/trunk/org.openwms.app</url>
    </scm>

    <profiles>
        <profile>
            <id>all</id>
            <modules>
                <module>org.openwms.app.par</module>
                <module>org.openwms.app.plan</module>
                <module>org.openwms.client.flex.app</module>
                <module>org.openwms.client.flex.wrapper</module>
            </modules>
        </profile>
    </profiles>

	<dependencyManagement>
	    <dependencies>
	        <!-- Project dependencies -->
	        <dependency>
	            <groupId>${project.groupId}</groupId>
	            <artifactId>org.openwms.core.domain</artifactId>
	            <version>${project.version}</version>
	        </dependency>
	        <dependency>
	            <groupId>${project.groupId}</groupId>
	            <artifactId>org.openwms.client.flex.lib</artifactId>
	            <version>${project.version}</version>
	            <type>swc</type>
	        </dependency>
	        <dependency>
	            <groupId>${project.groupId}</groupId>
	            <artifactId>org.openwms.client.flex.app</artifactId>
	            <version>${project.version}</version>
	            <type>swf</type>
	        </dependency>
	        <dependency>
	            <groupId>${project.groupId}</groupId>
	            <artifactId>org.openwms.client.flex.wrapper</artifactId>
	            <version>${project.version}</version>
	            <type>war</type>
	        </dependency>
	    </dependencies>
	</dependencyManagement>
	
</project>