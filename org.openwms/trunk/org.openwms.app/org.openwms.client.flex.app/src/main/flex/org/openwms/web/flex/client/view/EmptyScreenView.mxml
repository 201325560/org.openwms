<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" creationComplete="onShow()">
	
    <mx:Metadata>
        [Name]
    </mx:Metadata>

    <mx:Script>
        <![CDATA[
        
            import mx.managers.PopUpManager;
            import org.openwms.web.flex.client.view.dialogs.LoginView;
            import org.openwms.web.flex.client.model.ModelLocator;
            import org.granite.tide.spring.Identity;
            
            [In]
            [Bindable]
            /**
             * Injected Granite identity object.
             */
            public var identity:Identity;
            
	        [In]
	        [Bindable]
            /**
	         * Injected Model.
	         */
	        public var modelLocator : ModelLocator;

            [Bindable]
            /**
             * Behind-the-model.
             */
            public var loginView:LoginView;
        
            [Observer("APP_LOCK","APP_LOGOUT")]
            /**
             * Whats going on? On logout or lock event we show this dialogue.
             */
            public function onShow():void {
                trace("Check for login");
                if (!identity.loggedIn) {
                	if (modelLocator.SCREEN_LOCKED) {
                        showLoginDialog("Application locked by "+modelLocator.viewLockedBy);
                	} else {
                        showLoginDialog("Not logged in");
                    }
                }
            }
    
            private function showLoginDialog(text:String):void {
                loginView = LoginView(PopUpManager.createPopUp(this, LoginView, true));
                loginView.loginMessageText = text;
                PopUpManager.centerPopUp(loginView);
            }
            
        ]]>
    </mx:Script>
    
</mx:Canvas>
